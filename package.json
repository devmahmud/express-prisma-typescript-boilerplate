{
  "name": "express-prisma-typescript-boilerplate",
  "version": "1.0.0",
  "description": "REST API Boilerplate with Node JS, Express, TypeScript and Prisma",
  "main": "src/index.ts",
  "repository": "git@github.com:devmahmud/express-prisma-typescript-boilerplate.git",
  "author": "Mahmudul Alam <expelmahmud@gmail.com>",
  "scripts": {
    "start": "yarn build && pm2 start ecosystem.config.json --no-daemon",
    "dev": "nodemon -r tsconfig-paths/register -r ts-node src/index.ts",
    "test": "jest -i --colors --verbose --detectOpenHandles",
    "test:watch": "jest -i --watchAll",
    "coverage": "jest -i --coverage",
    "coverage:coveralls": "jest -i --coverage --coverageReporters=text-lcov | coveralls",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier --check **/*.ts",
    "prettier:fix": "prettier --write **/*.ts",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "docker:prod": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up",
    "docker:dev": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up",
    "docker:test": "docker-compose -f docker-compose.yml -f docker-compose.test.yml up",
    "docker:dev-db:start": "docker-compose -f docker-compose.only-db-dev.yml up -d",
    "docker:dev-db:stop": "docker-compose -f docker-compose.only-db-dev.yml down",
    "prepare": "husky install",
    "build": "rimraf build && tsc -p tsconfig.json && tscpaths -p tsconfig.json -s . -o ./build",
    "cz": "cz"
  },
  "keywords": [
    "node",
    "node.js",
    "typescript",
    "boilerplate",
    "express",
    "rest",
    "api",
    "prisma",
    "postgresql",
    "docker",
    "passport",
    "zod",
    "eslint",
    "prettier",
    "swagger",
    "openapi"
  ],
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@faker-js/faker": "^8.0.2",
    "@jest/globals": "^29.6.2",
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.5.0",
    "@types/nodemailer": "^6.4.9",
    "@types/passport-jwt": "^3.0.9",
    "@types/supertest": "^2.0.12",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/xss-filters": "^0.0.27",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "commitizen": "^4.3.0",
    "coveralls": "^3.1.1",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "jest": "^29.6.2",
    "lint-staged": "^14.0.0",
    "node-mocks-http": "^1.13.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.2",
    "prisma": "^5.1.1",
    "rimraf": "^5.0.1",
    "supertest": "^6.3.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "tscpaths": "^0.0.9",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@prisma/client": "^5.1.1",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.9.0",
    "helmet": "^7.0.0",
    "http-status": "^1.6.2",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.4",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "pm2": "^5.3.0",
    "winston": "^3.10.0",
    "xss-filters": "^1.2.7",
    "zod": "^3.22.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
